<div class="row">
  <div class="col">
    <h1><%= @recipe.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-3">
    <ul class="list-group">
      <% @recipe.quantities.each do |quantity| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= quantity.ingredient.name %>
          <span class="badge badge-primary badge-pill"><%= quantity.quantity %> <%= quantity.unit %></span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-9">
    <%= @recipe.description %>
  </div>
</div>