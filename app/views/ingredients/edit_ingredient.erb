<div class="row">
  <div class="col">
    <form action="/ingredients/<%= @ingredient.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" value="<%= @ingredient.name %>">
      </div>
      <button type="submit" class="btn btn-primary">Edit Ingredient</button>
    </form>
  </div>
</div>