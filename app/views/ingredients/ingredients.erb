<div class="row">
  <div class="col">
    <h1>List of all ingredients</h1>
  </div>
</div>

<% @ingredients.each do |ingredient| %>
  <div class="row">
    <div class="col-9"><%= ingredient.name %></div>
    <div class="col-3">
      <a href="/ingredients/<%= ingredient.id %>/edit">Edit</a>
      <a href="/ingredients/<%= ingredient.id %>/delete">Delete</a>
    </div>
  </div>
<% end %>

<div class="btn-add">
  <a href="/ingredients/add" class="btn btn-info">Add Ingredient</a>
</div>